        "ext-couchbase": ">= 2.2.1",
        "symfony/serializer": "^3.0 || ^4.0"
    },
    "require-dev": {
        "phing/phing": "^2.0",
        "phpmd/phpmd": "^2.0",
        "sebastian/phpcpd": "^2.0",
        "squizlabs/php_codesniffer": "dev-master",
        "atoum/atoum": "^2.6",
        "atoum/stubs": "^2.5",
        "vimeo/psalm": "dev-master",
        "object-calisthenics/phpcs-calisthenics-rules": "dev-master",
        "phpstan/phpstan": "^0.9"
    },
    "config": {
        "bin-dir": "bin"
